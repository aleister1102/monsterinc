<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .ReportTitle }}</title>
    {{if .FaviconBase64}}
        <link rel="icon" type="image/png" href="data:image/png;base64,{{.FaviconBase64}}">
    {{end}}

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- DataTables CSS CDN -->
    {{if .EnableDataTables}}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.min.css">
    {{end}}

    <style>
        /* Embedded Custom CSS */
        {{if .CustomCSS}}{{.CustomCSS}}{{end}}
    </style>
</head>
<body class="{{.Theme}}-theme">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">{{ .ReportTitle }}</a>
            <div class="collapse navbar-collapse">
                <span class="navbar-text ms-auto">
                    Generated at: {{ .GeneratedAt }}
                </span>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for Target Navigation -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Targets</span>
                    </h6>
                    <ul id="targetList" class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" data-target="all">
                                All Targets
                            </a>
                        </li>
                        {{range .UniqueRootTargets}}
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-target="{{.}}">
                                {{.}}
                            </a>
                        </li>
                        {{end}}
                    </ul>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="row mb-3 pt-3">
                    <div class="col-md-3">
                        <input type="text" id="globalSearchInput" class="form-control" placeholder="{{index .FilterPlaceholders "globalSearch"}}">
                    </div>
                    <div class="col-md-2">
                        <select id="statusCodeFilter" class="form-select">
                            <option value="">Filter by Status Code...</option>
                            {{range .UniqueStatusCodes}}
                            <option value="{{.}}">{{.}}</option>
                            {{end}}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select id="contentTypeFilter" class="form-select">
                            <option value="">Filter by Content Type...</option>
                            {{range .UniqueContentTypes}}
                            <option value="{{.}}">{{.}}</option>
                            {{end}}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="techFilterInput" class="form-control" placeholder="{{index .FilterPlaceholders "techSearch"}}">
                    </div>
                    <div class="col-md-2 d-flex align-items-center">
                         <span id="resultsCountInfo" class="text-muted">Total: {{.TotalResults}} (Success: {{.SuccessResults}}, Failed: {{.FailedResults}})</span>
                    </div>
                </div>

                {{if .ErrorMessage}}
                <div class="alert alert-danger" role="alert">
                    <strong>Error generating report:</strong> {{.ErrorMessage}}
                </div>
                {{end}}

                <table id="resultsTable" class="table table-striped table-bordered table-hover {{if .EnableDataTables}}dataTable{{end}}" style="width:100%">
                    <thead>
                        <tr>
                            <th class="sortable" data-sort-key="InputURL">Input URL</th>
                            <th class="sortable" data-sort-key="FinalURL">Final URL</th>
                            <th class="sortable" data-sort-key="StatusCode">Status</th>
                            <th class="sortable" data-sort-key="Title">Title</th>
                            <th>Technologies</th>
                            <th class="sortable" data-sort-key="WebServer">Web Server</th>
                            <th class="sortable" data-sort-key="ContentType">Content Type</th>
                            <th class="sortable" data-sort-key="ContentLength">Length</th>
                            <th>IPs</th>
                            <th>CNAMEs</th>
                            <th>ASN</th>
                            <th>TLS Info</th>
                            <th class="sortable" data-sort-key="duration">Duration (s)</th>
                            <th>Error</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{if not .ProbeResults}}
                        <tr>
                            {{/* Colspan should match the number of columns in the header */}}
                            <td colspan="15" class="text-center">No results to display.</td>
                        </tr>
                        {{end}}
                        {{range $idx, $pr := .ProbeResults}}
                        {{/* Add data-result-index to tr for JS to easily find the full data */}}
                        <tr class="{{if not .IsSuccess}}table-danger{{else if .StatusCode}}status-{{.StatusCode}}{{end}}" data-result-index="{{$idx}}">
                            <td class="truncate-url" title="{{.InputURL}}"><a href="{{.InputURL}}" target="_blank">{{.InputURL}}</a></td>
                            <td class="truncate-url" title="{{.FinalURL}}"><a href="{{.FinalURL}}" target="_blank">{{.FinalURL}}</a></td>
                            <td>{{if .StatusCode}}{{.StatusCode}}{{else if .Error}}ERR{{else}}-{{end}}</td>
                            <td class="truncate-title" title="{{.Title}}">{{if .Title}}{{.Title}}{{else}}-{{end}}</td>
                            <td class="truncate-techs" title="{{joinStrings .Technologies ", "}}">{{joinStrings .Technologies ", "}}</td>
                            <td>{{if .WebServer}}{{.WebServer}}{{else}}-{{end}}</td>
                            <td>{{if .ContentType}}{{.ContentType}}{{else}}-{{end}}</td>
                            <td>{{if .ContentLength}}{{.ContentLength}}{{else}}-{{end}}</td>
                            <td>{{joinStrings .IPs ", "}}</td>
                            <td>{{joinStrings .CNAMEs ", "}}</td>
                            <td>{{if .ASN}}{{.ASN}}{{if .ASNOrg}} ({{.ASNOrg}}){{end}}{{else}}-{{end}}</td>
                            <td class="truncate-tls" title="Version: {{.TLSVersion}}, Cipher: {{.TLSCipher}}, Issuer: {{.TLSCertIssuer}}, Expires: {{.TLSCertExpiry}}">
                                {{if .TLSVersion}}
                                    {{.TLSVersion}}
                                    {{if .TLSCipher}}<br><small>{{.TLSCipher}}</small>{{end}}
                                    {{if .TLSCertIssuer}}<br><small>Issuer: {{.TLSCertIssuer}}</small>{{end}}
                                    {{if .TLSCertExpiry}}<br><small>Expires: {{.TLSCertExpiry}}</small>{{end}}
                                {{else}}
                                    -
                                {{end}}
                            </td>
                            <td>{{printf "%.3f" .Duration}}</td>
                            <td class="truncate-error" title="{{.Error}}">{{if .Error}}{{.Error}}{{else}}-{{end}}</td>
                            {{/* Ensure data-bs-target points to the modal ID */}}
                            <td><button class="btn btn-sm btn-outline-info view-details-btn" data-bs-toggle="modal" data-bs-target="#detailsModal">View</button></td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div id="paginationControls">
                            {{/* Task 4.1: Pagination controls will be dynamically generated by JS */}}
                        </div>
                    </div>
                     <div class="col-md-6 text-end">
                        <select id="itemsPerPageSelect" class="form-select form-select-sm" style="width: auto; display: inline-block;">
                            <option value="10" {{if eq .ItemsPerPage 10}}selected{{end}}>10</option>
                            <option value="25" {{if eq .ItemsPerPage 25}}selected{{end}}>25</option>
                            <option value="50" {{if eq .ItemsPerPage 50}}selected{{end}}>50</option>
                            <option value="100" {{if eq .ItemsPerPage 100}}selected{{end}}>100</option>
                        </select>
                        <label for="itemsPerPageSelect" class="ms-2 form-label">items per page</label>
                    </div>
                </div>
            </main> <!-- End Main Content Area -->
        </div> <!-- End Row -->
    </div>

    {{/* Modal for details - Task 2.1 refinement area */}}
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Probe Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{/* Content will be populated by JS */}}
                    <pre id="modalDetailsContent"></pre>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">MonsterInc Scan Report &copy; {{ .GeneratedAt }}</span>
        </div>
    </footer>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    {{if .EnableDataTables}}
    <!-- DataTables JS CDN -->
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.min.js"></script>
    {{end}}

    <script>
        // Embedded Custom Report JS
        {{if .ReportJs}}{{.ReportJs}}{{end}}
    </script>
</body>
</html> 